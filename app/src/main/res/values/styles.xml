<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- Contextual actionbar background -->
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <!-- Large text color (in actionbar and toolbar)-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Medium text color -->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- Small text color -->
        <item name="android:textColorTertiary">@color/textColorTertiary</item>
        <item name="android:editTextColor">@color/textColorTertiary</item>
        <item name="android:textColorHint">@color/grayish</item>
        <!-- Text selection color -->
        <item name="android:textColorHighlight">@color/petroleum_highlight</item>
        <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="homeAsUpIndicator">@drawable/start_white_arrow_icon</item>

        <item name="dialogTheme">@style/MyDialogTheme</item>
        <item name="alertDialogTheme">@style/MyDialogTheme</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Transparent Screen theme. -->
    <style name="AppTheme.NoActionBar.Transparent">

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="forward_petroleum_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/petroleum_rounded_corners_shape</item>
        <item name="android:drawableEnd">@drawable/end_white_arrow_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">100dp</item>
        <item name="android:paddingStart">110dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="submit_petroleum_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/petroleum_rounded_corners_shape</item>
        <item name="android:drawableStart">@drawable/check_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">100dp</item>
        <item name="android:paddingStart">110dp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="bold_capitalized_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="white_medium_bold_capitalized_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="white_medium_capitalized_text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>


    <style name="yellowish_medium_bold_capitalized_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>


    <!-- ============= Navigation drawer ===============-->
    <style name="navigation_item_text_appearance" parent="TextAppearance.AppCompat.Small">
        <!--<item name="android:textAllCaps">true</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationDrawerStyle">
        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">35dp</item>
    </style>


    <!--========== Custom Toggle Style ============-->
    <style name="Toggle_RG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/yellowish_rounded_corners_shape</item>
    </style>

    <style name="Toggle_RB" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/toggle_rb_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- ============================================== -->
    <!-- Crop Activity theme -->

    <style name="CropActivityTheme" parent="android:Theme.DeviceDefault" tools:ignore="NewApi">
        <item name="cropImageStyle">@style/Widget.CropImageView</item>
    </style>

    <style name="Widget.CropImageView" parent="android:Widget">
        <item name="showThirds">false</item>
        <item name="showCircle">false</item>
        <item name="showHandles">always</item>
        <item name="highlightColor">#f3f3f3</item>
    </style>

    <!-- =============== Pickup Screen =============== -->
    <!-- Top Toggle Group -->
    <style name="TopToggleGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Top Toggle Seperator-->
    <style name="TopToggleSeperator">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/colorAccentDark</item>
    </style>

    <!-- Top Toggle Button -->
    <style name="TopToggleButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/top_toggle_button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
