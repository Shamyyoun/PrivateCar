<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/petroleum</item>
        <item name="colorControlActivated">@color/petroleum</item>
        <!-- Contextual actionbar background -->
        <item name="android:actionModeBackground">@color/yellowish</item>
        <!-- Large text color (in actionbar and toolbar)-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Medium text color -->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!-- Small text color -->
        <item name="android:textColorTertiary">@color/textColorTertiary</item>
        <item name="android:editTextColor">@color/textColorTertiary</item>
        <item name="android:textColorHint">@color/grayish</item>
        <!-- Text selection color -->
        <item name="android:textColorHighlight">@color/petroleum_highlight</item>
        <item name="colorButtonNormal">@color/petroleum</item>

        <item name="homeAsUpIndicator">@drawable/start_white_arrow_icon</item>

        <item name="dialogTheme">@style/MyDialogTheme</item>
        <item name="alertDialogTheme">@style/MyDialogTheme</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
    </style>


    <!--========== Custom Toggle Style ============-->
    <style name="Toggle_RG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/yellowish_rounded_corners_shape</item>
    </style>

    <style name="Toggle_RB" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/toggle_rb_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- ============================================== -->
    <!-- Crop Activity theme -->

    <style name="CropActivityTheme" parent="android:Theme.DeviceDefault" tools:ignore="NewApi">
        <item name="cropImageStyle">@style/Widget.CropImageView</item>
    </style>

    <style name="Widget.CropImageView" parent="android:Widget">
        <item name="showThirds">false</item>
        <item name="showCircle">false</item>
        <item name="showHandles">always</item>
        <item name="highlightColor">#f3f3f3</item>
    </style>
    <!--==========  ============-->

</resources>
