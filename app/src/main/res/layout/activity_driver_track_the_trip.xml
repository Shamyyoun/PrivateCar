<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DriverTrackTheTripActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        map:cameraBearing="112.5"
        map:cameraTargetLat="-33.796923"
        map:cameraTargetLng="150.922433"
        map:cameraTilt="30"
        map:cameraZoom="13"
        map:liteMode="true"
        map:mapType="normal"
        map:uiCompass="false"
        map:uiRotateGestures="false"
        map:uiScrollGestures="false"
        map:uiTiltGestures="false"
        map:uiZoomControls="false"
        map:uiZoomGestures="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/petroleum_rounded_corners_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/white_medium_bold_capitalized_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride No: " />

            <TextView
                style="@style/white_medium_capitalized_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AA1234" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/petroleum_rounded_corners_shape"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/white_medium_bold_capitalized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 : 2" />

                <TextView
                    style="@style/white_medium_bold_capitalized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H : M" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/petroleum_rounded_corners_shape"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/white_medium_bold_capitalized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 : 999" />

                <TextView
                    style="@style/white_medium_bold_capitalized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM : M" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/yellowish_rounded_corners_shape"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/white_medium_bold_capitalized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting" />

                <TextView
                    style="@style/white_medium_bold_capitalized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 : 60" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            style="@style/white_medium_bold_capitalized_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/petroleum_rounded_corners_shape"
            android:gravity="center"
            android:text="220 EGP"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/btn_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/yellowish_rounded_corners_selector"
            android:minHeight="40dp"
            android:text="End Ride" />

    </LinearLayout>


</LinearLayout>
