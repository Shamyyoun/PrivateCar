<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/linearlayout_vertical_divider_transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:showDividers="middle"
    tools:context="com.privatecar.privatecar.activities.DriverRateTripActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/petroleum_rounded_corners_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/white_medium_bold_capitalized_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride No: " />

        <TextView
            style="@style/white_medium_capitalized_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AA1234" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/petroleum_rounded_corners_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/white_medium_bold_capitalized_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Id: " />

        <TextView
            style="@style/white_medium_capitalized_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AA1234" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="1.5"
        android:stepSize="0.5"
        android:theme="@style/GoldenRatingBarTheme" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_car_accident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_behaved_badly" />

        <RadioButton
            android:id="@+id/rb_overcrowded_roads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_arrived_late" />

        <RadioButton
            android:id="@+id/rb_praying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_made_illegal_action" />

        <RadioButton
            android:id="@+id/rb_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other" />

    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_rounded_grayish_border"
        android:gravity="start|top"
        android:hint="@string/please_type_comment_here"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_send"
        style="@style/submit_yellowish_button_with_half_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rate"
        android:textSize="@dimen/large_text_size" />

</LinearLayout>
